<% form_for @article , :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <p>  
 	<%= f.label :section %>
    <%= f.collection_select( :section_id, @sections,:id,:title) %>
  </p>
    <p>
    <%= f.label :image %><br />
    <%= f.file_field :image  %>
  </p>
  <p>
    <%= f.label :titre %><br />
    <%= f.text_field :title , :size => "55" %>
  </p>
    <p>
    <%= f.label :titre_de_la_page %><br />
    <%= f.text_field :page_title , :size => "55" %>
  </p>
  <p>
    <%= f.label :keywords %><br />
    <%= f.text_area :keywords , :cols => "40" , :rows => "5" %>
  </p>
  <p>
    <%= f.label :meta_description %><br />
    <%= f.text_area :meta , :cols => "40" , :rows => "5" %>
  </p>
    <p>
    <%= f.label :start_publish %><br />
	<%= calendar_date_select_tag :s_publish %>
  </p>
  <p>
    <%= f.label :end_publish %><br />
    <%= calendar_date_select_tag :e_publish %>
  </p>  
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content , :class => 'mceEditor' %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
