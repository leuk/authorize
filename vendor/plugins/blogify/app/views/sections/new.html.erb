<h1>Ajouter un section dans l'application. <!-- t('create_section') -->  </h1>

<% form_for(@section , :html => {:multipart => true}) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title , :size => 60 %>
  </p>
  <p>
    <%= f.label :keywords %><br />
    <%= f.text_area :keywords  , :cols => 40 , :rows => 5 %>
  </p>
  <p>
    <%= f.label :meta %><br />
    <%= f.text_area :meta  , :cols => 40 , :rows => 5  %>
  </p>
  <p>
    <%= f.label :Publish_status %> <%= f.check_box :status %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', sections_path %>